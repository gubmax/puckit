{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": [
      "./tsconfig.json",
      "./packages/puckit-create-app/tsconfig.json",
      "./packages/puckit-dev-utils/tsconfig.json",
      "./packages/puckit-scripts/tsconfig.json"
    ]
  },
  "extends": ["airbnb-typescript/base"],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": "off",
    "@typescript-eslint/semi": ["error", "never"],
    "no-console": "off",
    "no-debugger": ["warn"],
    "quotes": ["error", "single"],
    "global-require": "off",
    "import/no-dynamic-require": "off"
  }
}
